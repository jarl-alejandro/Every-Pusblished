@import "normalize.styl"

.about-header
  padding 1px 0 0 0
  //padding 20px 40px 15px 20px
  background rgba(#B6B6B6, .3)
  line-height 1.3
  font-size 20px
  font-size 2rem
  margin-bottom 10px
  border-bottom 1px solid rgba(#B6B6B6, .3)

.about-author-avatar
  img
    border-radius 50%
    margin .5em

.about-author-category
  position relative
  left 2.2em

.about-author-name
.about-author-avatar
.about-author-category
  display inline-block
  vertical-aling top

.about-header-title
  text-align center
  color #222222
  position relative
  top -0.5em

.author
  margin-top 2em
  width 27em

.alert-material
  position fixed
  right 12px
  bottom 12px
  z-index 1
  display inline-block
  min-height 48px
  padding 13px 24px 12px
  font-family 'Roboto', sans-serif
  color #f1f1f1
  cursor default
  background #323232
  border-radius 2px
  outline none
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26)

.card-publish
  width 28%
  height 35%
  display inline-block
  vertical-aling top
  margin 1em 0 1em 1.8em
  position relative
  left 3.7em
  transition-duration .5s
  &:hover
    box-shadow 0 3px 40px rgba(black,0.23),0 3px 40px rgba(black,0.23)

.otherAuthor
  margin-top 2em
  width 27em

.publish
  margin 2em
  width 55em

.publish-foto
  width 360px
  height 179px

//ocss
.card
  border-radius 2px
  color rgba(black, 0.84)
  background #FFFFFF
  box-shadow 0 3px 6px rgba(black,0.16),0 3px 6px rgba(black,0.23)

.relative
  position relative

.pointer
  box-shadow rgba(0, 0, 0, 0.4) 0 2px 5px
  width 50px
  height 50px
  padding 16px 0
  position absolute
  bottom 1.5em
  left 9em
  line-height 1
  background #ec407a
  text-align center
  color white
  background-clip padding-box
  border-radius 50%
  font-family 'Material Design Iconic Font'
  font-size 2rem
  transition-duration 0.3s
  &:hover
    color white
    text-decoration none
    box-shadow 0 15px 30px rgba(black,0.40)
