@import "normalize.styl"
@import "nib"

.about-author
  margin 0
  padding 0
  position absolute
  top 0
  left 0
  bottom 0
  right 0

.about-header
  padding 1px 0 10px 0
  background rgba(#B6B6B6, .3)
  line-height 1.3
  font-size 20px
  font-size 2rem
  margin-bottom 0px
  border-bottom 2px solid rgba(#B6B6B6, .3)

.about-author-avatar
  img
    border-radius 50%
    margin .5em

.about-author-category
  position absolute
  left 7em
  top 4em
  margin 0
  padding 0

.about-author-name
.about-author-avatar
.about-author-category
  display inline-block
  vertical-aling top

.about-header-title
  text-align center
  color #222222
  position relative
  top -0.5em
  font-size 20px

.author
  margin-top 2em
  width 27em

.alert-material
  position fixed
  right 12px
  bottom 12px
  z-index 1
  display inline-block
  min-height 48px
  padding 13px 24px 12px
  font-family 'Roboto', sans-serif
  color #f1f1f1
  cursor default
  background #323232
  border-radius 2px
  outline none
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26)

.card-publish
  width 21.1em
  display inline-block
  vertical-align top
  height 24.5em
  margin 1.5em 0 1em 1em
  position relative
  left 1.3em
  transition-duration .5s
  top 7em
  &:hover
    box-shadow 0 3px 40px rgba(black,0.23),0 3px 40px rgba(black,0.23)

.other-author
  margin-top 2em
  width 27em

.publish
  margin 2em
  width 55em

.publish-foto
  width 100%
  height 11.19em
  transition all 0.3s ease

//ocss
.card
  border-radius 2px
  color rgba(black, 0.84)
  background #FFFFFF
  box-shadow 0 3px 6px rgba(black,0.16),0 3px 6px rgba(black,0.23)

.relative
  position relative

.pointer
  background #ec407a
  background-clip padding-box
  border-radius 50%
  bottom 1.4em
  box-shadow rgba(0, 0, 0, 0.4) 0 2px 5px
  color white
  font-family 'Material Design Iconic Font'
  font-size 2rem
  height 50px
  left 7.5em
  line-height 1
  padding 16px 0
  position absolute
  text-align center
  transition-duration 0.3s
  width 50px
  &:hover
    color white
    text-decoration none
    box-shadow 0 15px 30px rgba(black,0.40)

// toolbar
.paper-shadow
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26)

.paper-toolbar
  color #fff
  background #00796B

.app-bar, .navdrawer-container
  transition: transform 0.3s ease-out


.promote-layer
  backface-visibility hidden

.app-bar-container
  display flex
  width 100%
  height 64px
  position relative
  flex-direction row
  margin 0 auto

.app-bar
  display block
  width 100%
  position fixed
  top 0
  left 0
  overflow hidden
  z-index 1
  margin-bottom 40px

.app-bar .logo
  flex 1
  font-size 1.3em
  margin 0 16px
  padding 0
  color #fefefe
  float none
  max-width none
  font-weight 400
  line-height 64px

.app-bar button
  width 64px
  height 64px
  background-image none
  background-color transparent
  border none
  padding 0
  transition background-color 0.2s ease-out
  -webkit-tap-highlight-color transparent

button.menu img
  height 24px
  width 24px

//fields

h3
  color #787878
  margin-top 0
  padding-bottom 20px
  //border-bottom 1px solid rgba(0, 0, 0, 0.07)

.wrapper
  width 100%

.form-wrapper
  width 340px
  margin 60px auto
  padding 24px
  background #fff
  box-shadow 2px 2px 2px rgba(0, 0, 0, 0.1)

.form-group
  position relative
  width 100%
  margin-bottom 42px

/*
.form-group input[type='text'],
.form-group input[type='password']
.form-group input[type='email']

*/

.form-group input
  position relative
  width 100%
  background 0 0
  padding 26px 0 12px
  font-size 15px
  line-height 1.4
  font-weight 500
  border 1px solid rgba(0, 0, 0, 0.08)
  border-width 0 0 1px
  box-shadow none
  z-index 1

.form-group input:focus
  outline 0

.form-group label
  display inline-block
  position absolute
  margin-bottom 6px
  top 0
  font-size 12px
  font-weight 300
  color rgba(0, 0, 0, 0.4)
  padding 0
  transition all .3s ease

.form-group::after
  content ""
  position absolute
  width 0
  height 2px
  bottom 0
  left 50%
  z-index 1000
  background rgba(0, 0, 0, 0.08)
  transition all .3s ease

.form-group .error-block
  position absolute
  line-height 0
  font-weight 300
  font-size 12px
  color red
  line-height 24px
  transition all 0.5s ease
  margin 0

.form-group .error-block.ng-hide
  display block !important
  visibility hidden
  opacity 0

/*.form-group.has-focus {
}*/

.form-group.has-focus label
  color #039BE5

.form-group.has-focus::after
  left 0
  background #039BE5
  width 100%

/*.form-group.has-error {
}*/
.form-group.has-error label
  color red

.form-group.has-error::after
  left 0
  background red
  width 100%

.form-group.has-error .help-block:not(.ng-hide)
  position absolute
  color red
  opacity 1
  visibility visible
  top 100%

/*.form-group.has-success.has-focus {
}*/

.form-group.has-success.has-focus label
  color forestgreen

.form-group.has-success.has-focus.has-focus::after
  left 0
  background forestgreen
  width 100%

.form-group.is-empty:not(.has-focus) label
  font-weight 400
  font-size 14px
  top 32px
